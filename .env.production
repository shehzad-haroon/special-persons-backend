# Production Environment Variables
PORT=5000
NODE_ENV=production

# MongoDB Atlas Connection (Replace with your actual MongoDB Atlas connection string)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/specialpersons?retryWrites=true&w=majority

# JWT Secret (Use a strong random secret in production)
JWT_SECRET=your-super-secure-jwt-secret-key-here-make-it-long-and-random

# CORS Origin (Replace with your Firebase hosting URL)
CORS_ORIGIN=https://your-app-name.web.app

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DEST=uploads

# Socket.io Configuration
SOCKET_CORS_ORIGIN=https://your-app-name.web.app